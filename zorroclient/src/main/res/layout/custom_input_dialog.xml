<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@drawable/custom_alert_dialog_background"
    android:orientation="vertical"
    android:paddingTop="20dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="提示"
        android:layout_gravity="center"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/c282828"
        android:maxWidth="200dp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="1dp"
        android:layout_marginTop="13dp"
        android:text="签到成功，获得200积分"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:textSize="14sp"
        android:maxWidth="200dp"
        android:textColor="@color/c282828"/>

    <EditText
        android:id="@+id/input_dialog_text"
        android:layout_width="232dp"
        android:layout_height="29dp"
        android:maxEms="25"
        android:textSize="14sp"
        android:textColor="@color/c282828"
        android:textColorHint="#9696a5"
        android:background="@drawable/input_dialog_edittext_background"
        android:layout_gravity="center_horizontal"
        android:textCursorDrawable="@drawable/cursor_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="13dp"
        android:inputType="text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="36dp"
        android:background="@color/alertdialog_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="14sp"
            android:textColor="@color/text_normal_blue_selector"/>

        <View
            android:id="@+id/button_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/alertdialog_line"/>

        <TextView
            android:id="@+id/right_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="@string/OK"
            android:textSize="14sp"
            android:textColor="@color/text_normal_blue_selector"/>
    </LinearLayout>

</LinearLayout>